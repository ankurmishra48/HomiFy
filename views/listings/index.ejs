<style>
  /* Filters Container */
  #filters {
      display: flex;
      justify-content: center;
      gap: 15px;
      padding: 15px;
      background-color: #f8f9fa;
      border-bottom: 2px solid #ddd;
      flex-wrap: wrap;
  }

  /* Unified Filter Styling */
  .filter, .filter-icon {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      border-radius: 10px;
      background: white;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: 0.3s;
      cursor: pointer;
      width: 120px;
      text-align: center;
  }

  .filter:hover, .filter-icon:hover {
      background-color: #007bff;
      color: white;
  }

  .filter:hover i, .filter:hover p,
  .filter-icon:hover i, .filter-icon:hover span {
      color: white;
  }

  .filter i, .filter-icon i {
      font-size: 24px;
      margin-bottom: 5px;
      color: #007bff;
  }

  .filter p, .filter-icon span {
      margin: 5px 0 0;
      font-size: 14px;
      font-weight: bold;
      color: #333;
  }

  /* Listings */
  .row {
      padding: 20px;
  }

  .card {
      transition: 0.3s;
      border-radius: 10px;
      overflow: hidden;
  }

  .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
  }

  .card img {
      height: 15rem;
      object-fit: cover;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
  }

  .card-body {
      padding: 10px;
      text-align: center;
  }

  .listingphoto {
      text-decoration: none;
      color: inherit;
  }
</style>

<% layout("/layouts/boilerplate") %>
<%= success %>

<!-- Filter Icons Section -->
<div id="filters">
  <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p><p>Mountains</p></div>
   <div class="filter"><i class="fa-solid fa-water"></i><p>Amazing Pools</p></div>
  <div class="filter-icon"><i class="fa-solid fa-money-bill-wave"></i><span>Price</span></div>
  <div class="filter-icon"><i class="fa-solid fa-map-marker-alt"></i><span>Location</span></div>
  <div class="filter-icon"><i class="fa-solid fa-star"></i><span>Rating</span></div>
   <div class="filter-icon"><i class="fa-solid fa-users"></i><span>Guests</span></div>
</div>

<!-- Listings Section -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listingphoto"> 
          <div class="card col">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
              <div class="card-body">
                  <b><%= listing.title %></b><br/>
                  &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %> /night
              </div>
          </div>
      </a>
  <% } %>
</div>
