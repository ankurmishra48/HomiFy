<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Login</h2>
                <form action="/login" method="post">
                    <!-- Username -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" required placeholder="Enter your username">
                    </div>
                    
                   
                    
                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required placeholder="Enter a strong password">
                    </div>

                    <!-- Signup Button -->
                    <button type="submit" class="btn btn-success w-100">Login</button>
                    
                     
                </form>
            </div>
        </div>
    </div>
</div>



 