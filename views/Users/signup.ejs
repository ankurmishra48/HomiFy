<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Signup</h2>
                <form action="/signup" method="post">
                    <!-- Username -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" required placeholder="Enter your username">
                    </div>
                    
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required placeholder="Enter your email">
                    </div>
                    
                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required placeholder="Enter a strong password">
                    </div>

                    <!-- Signup Button -->
                    <button type="submit" class="btn btn-success w-100">Sign Up</button>
                    
                    <!-- Already have an account -->
                    <div class="text-center mt-3">
                        <p>Already have an account? <a href="/login" class="text-primary">Login here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
